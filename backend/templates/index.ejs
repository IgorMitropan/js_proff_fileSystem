<% layout('./layout/page') -%>

<% block('title', 'FileSystem Web App')%>
<% block('scripts', '<script src="./fileSystem.js" defer></script>')%>
<% block('descriptionTitle', 'Description:'); %>
<% block('description', 'I hope you can see the content of the current project directory. '+
                        'You can click on each item and see its path above and comments on the right. '+
                        'Certainly you can live your own one or two. '+
                        'Besides, each folder\'s content display toggles. '+
                        'And finally you can see the file content by double clicking on it.')%>


<div id="container">
    <div class="row row-content">
        <div class="col-xs-12 ">
            <div data-component="breadcrumbs">
                <div data-selector="path" class="inlineDiv"></div>
                <button data-selector="backButton" class="btn btn-primary js-hidden"> <-Back </button>
            </div>
        </div>
    </div>
    <div class="row row-content">
        <div class="col-xs-12 col-lg-6">
            <fieldset>
                <legend>Content</legend>
                <div class="viewer">
                    <div data-component="dirViewer"></div>
                    <div data-component="fileViewer" class="js-hidden"></div>
                </div>
            </fieldset>
        </div>
        <div class="col-xs-12 col-lg-6">
            <fieldset>
                <legend>Comments</legend>
                <div class="commentsViewer">
                    <div data-component="commentsViewer"></div>
                </div>
            </fieldset>
            <br>
            <div data-component="commentSender" class="commentSender js-hidden">
                <textarea placeholder="Leave your comment here"  data-selector="text"></textarea>
                <span></span>
                <button data-selector="sendButton" class="btn btn-primary sendBtn">Send</button>
            </div>


        </div>

    </div>
</div>
